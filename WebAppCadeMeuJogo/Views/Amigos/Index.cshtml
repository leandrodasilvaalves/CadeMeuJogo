@model IEnumerable<WebAppCadeMeuJogo.Models.Entitys.Amigo>

@{
    ViewBag.Title = "Amigos";
}

<h2>Meus Amigos</h2>

<p>
    @Html.ActionLink("Novo Amigo", "Create", null, new { @class="btn btn-info"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Apelido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayName("Data de Nascimento")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Apelido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataNascimento, "{0:dd/MM/yyyy}")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CPF)
        </td>
        
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new {@class="btn btn-sm btn-danger" })
        </td>
    </tr>
}

</table>
