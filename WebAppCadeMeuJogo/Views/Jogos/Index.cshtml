@model IEnumerable<WebAppCadeMeuJogo.Models.Entitys.Jogo>

@{
    ViewBag.Title = "Index";
}

<h2>Meus Jogos</h2>
<br />

<p>
    @Html.ActionLink("Novo Jogo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Categoria")
        </th>
        <th>
            @Html.DisplayName("Jogo")
        </th>
        <th>
            @Html.DisplayName("Disponível")
        </th>
        
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Disponivel)
        </td>
        
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
