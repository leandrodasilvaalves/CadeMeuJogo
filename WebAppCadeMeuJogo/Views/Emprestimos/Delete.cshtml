@model WebAppCadeMeuJogo.Models.Entitys.Emprestimo

@{
    ViewBag.Title = "Excluir";
}

<h2>Excluir Empréstimo?</h2>
<br />
<div class="alert alert-danger"><h3>Tem certeza de que deseja excluir este empréstimo?</h3></div>
<div>
    <h4>Emprestimo do <strong>@Model.Amigo.Nome</strong></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nome: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amigo.Nome)
        </dd>
        <dt>
            @Html.DisplayName("Apelido: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amigo.Apelido)
        </dd>

        <dt>
            @Html.DisplayName("Data Inicial: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataInicio)
        </dd>

        <dt>
            @Html.DisplayName("Data final: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataFim)
        </dd>



    </dl>


    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>

<div class="form-group">
    <div class="col-md-4">
        <h3>Jogos do Empréstimo</h3>
        <ul class="list-group" id="lstJogos">
            @foreach (var jogo in ViewBag.JogosEmprestados)
            {
                <li class="list-group-item">
                    @jogo.Nome
                </li>
            }
        </ul>
    </div>
</div>
