@model WebAppCadeMeuJogo.Models.Entitys.Categoria

@{
    ViewBag.Title = "Excluir";
}

<h2>Excluir Categorira?</h2>

<div class="alert alert-danger"><h3>Tem certeza de que deseja excluir esta categoria?</h3></div>
<br />
<div>
    <h4>Categoria: <strong>@Model.Nome</strong></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nome da Categoria: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayName("Data de  Cadastro: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
        </div>
    }

    <h3>Jogos da Categoria</h3>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Jogo")
            </th>
            <th>
                @Html.DisplayName("Data Cadastro")
            </th>

        </tr>

        @foreach (var item in Model.Jogos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataCadastro, "{0:dd/MM/yyyy}")
                </td>
            </tr>
        }

    </table>

</div>
